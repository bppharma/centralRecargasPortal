@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>¡Comienza a ganar ya!.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Mobile"></label>
                <input asp-for="Input.Mobile" class="form-control" />
                <span asp-validation-for="Input.Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <recaptcha />
                <recaptcha-script jquery-validation="false" validation-message-element-id="Valida que no eres un robot" />
                
            </div>
            <button type="submit" class="btn btn-default">Comenzar a vender</button>
            <div class="form-group">
                <p class=" text-justify">Al crear una cuenta en portal, confirmo que he leído, entiendo y acepto los <a asp-action="Terminos" asp-controller="Home" target="_blank">Términos y condiciones</a> así como el <a asp-action="Privacy" asp-controller="Home" target="_blank">Aviso de Privacidad</a>.</p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
